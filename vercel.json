{
  "version": 2,
  "functions": {
    "api/search.js": {
      "maxDuration": 120
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "chatbot.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/product", "dest": "/product.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/admin", "dest": "/admin.html" },
    { "src": "/crm", "dest": "/crm.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
